<div class="block-wrapper">
								<div class="advice">
									<h4>Мы рекомендуем</h4>
									<div class="items">
									 {% for product in products %}
										<div class="item ">
											<img src="{{ product.thumb }}" alt="{{ product.name }}">
											<a href="{{ product.href }}" class="head" title="{{ product.name }}">{{ product.name }} </a>
											<p>{{ product.description }}</p>
											<a href="{{ product.href }}" class="price"><span>{{ product.price }}</a>
										</div>
									 {% endfor %}
									</div>
								</div>
							</div>
</div>
