<!DOCTYPE html>
<!--[if IE]><![endif]-->
<!--[if IE 8 ]><html dir="{{ direction }}" lang="{{ lang }}" class="ie8"><![endif]-->
<!--[if IE 9 ]><html dir="{{ direction }}" lang="{{ lang }}" class="ie9"><![endif]-->
<!--[if (gt IE 9)|!(IE)]><!-->
<html dir="{{ direction }}" lang="{{ lang }}">
<!--<![endif]-->
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<title>{{ title }}</title>
<base href="{{ base }}" />
{% if description %}
<meta name="description" content="{{ description }}" />
{% endif %}
{% if keywords %}
<meta name="keywords" content="{{ keywords }}" />
{% endif %}

<!-- Bxslider css -->
<link rel="stylesheet" href="catalog/view/theme/akvan/stylesheet/jquery.bxslider.css">
<!-- General css -->
<link rel="stylesheet" href="catalog/view/theme/akvan/stylesheet/general.css">

<script src="catalog/view/javascript/jquery/jquery-2.1.1.min.js" type="text/javascript"></script>
<script src="catalog/view/javascript/general.js" type="text/javascript"></script>
<script src="catalog/view/javascript/jquery.bxslider.js" type="text/javascript"></script>
<script src="catalog/view/javascript/jquery.arcticmodal-0.3.min.js" type="text/javascript"></script>

{% for style in styles %}
<link href="{{ style.href }}" type="text/css" rel="{{ style.rel }}" media="{{ style.media }}" />
{% endfor %}
{% for script in scripts %}
<script src="{{ script }}" type="text/javascript"></script>
{% endfor %}
<!-- <script src="catalog/view/javascript/common.js" type="text/javascript"></script> -->
{% for link in links %}
<link href="{{ link.href }}" rel="{{ link.rel }}" />
{% endfor %}
{% for analytic in analytics %}
{{ analytic }}
{% endfor %}
</head>
<body>
  <!-- Header begin -->
  <header>
    <div class="container">
      <!-- Top header begin -->
      <div class="top clearfix">
        <!-- Catalog main menu begin -->
        <!-- Catalog main menu end -->
        <!-- Form authorization begin -->
        <form class="pull-left">
          <label for="auth_login">Логин:</label>
          <input type="text" id="auth_login" name="login">
          <label for="auth_password">Пароль:</label>
          <input type="password" id="auth_password" name="password">
          <input class="submit-btn" type="submit" name="authorization" value="">
        </form>
        <!-- Form authorization end -->
        <!-- Block register/forgot/question begin -->
        <div class="login pull-left">
          <div><a href="javascript:void(0)" title="Регистрация">Регистрация</a></div>
          <div><a href="javascript:void(0)" title="Напомнить пароль">Напомнить пароль</a></div>
        </div>
        <div class="question pull-left">
          <a href="javascript:void(0)" title="Задать вопрос">Задать вопрос</a>
        </div>
        <!-- Block register/forgot/question end -->
        <!-- Cart begin -->
        <div class="cart clearfix">
          <div class="cart-icon pull-left">
            <div id="order">Товаров <span>12</span></div>
            <div id="price"><span>35 550 руб.</span></div>
          </div>
          <div class="pull-right">
            <a href="javascript:void(0)" class="shop" title="Оформить">Оформить</a>
          </div>
        </div>
        <!-- Cart end -->
      </div>
      <!-- Top header end -->
      <!-- Bottom header begin -->
      <div class="bottom clearfix">
        <a href="/" class="logo pull-left" title="logotip">Строительные товары</a>
        <!-- Main menu begin -->
      {% if informations %}
        <nav class="main-menu pull-left">
          <ul>
            {% for information in informations %}
              <li><a href="{{ information.href }}" title="{{ information.title }}">{{ information.title }}</a>
                {% if information.child_ids %}
                  <ul class="dropdown">
                    {% for information_child in information.childs  %}
                      <li><a href="{{ information_child.href }}" title="{{ information_child.title }}">{{ information_child.title }}</a></li>
                    {% endfor %}
                  </ul>
                {% endif %}
              </li>
            {% endfor %}
          </ul>
        </nav>
      {% endif %}

        <!-- Main menu end -->
        <!-- Filter+search begin -->
        <div class="filter pull-right clearfix">
          <!-- Search beginn -->
          <form class="search pull-left">
            <input type="search" name="search" placeholder="Поиск по сайту">
            <input class="search-btn" type="submit" name="search-btn" value="">
          </form>
          <!-- Search end -->
          <!-- Filter begin -->
          <form class="select pull-right">
            <select name="marka">
                <option disabled selected>Марка</option>
                <option>marka 1</option>
                <option>marka 2</option>
              </select>
            <select name="model">
                <option disabled selected>Модель</option>
                <option>E33</option>
                <option>E52</option>
              </select>
            <select name="year">
                <option disabled selected>Год</option>
                <option>2012</option>
                <option>2013</option>
              </select>
            <select name="brand">
                <option disabled selected>Бренд</option>
                <option>BMW</option>
                <option>Ferrari</option>
              </select>
            <input class="submit-btn" type="submit" name="select-btn" value="">
          </form>
          <!-- Filter end -->
        </div>
      </div>
      <!-- Bottom header end -->
    </div>
  </header>
  <!-- Header end -->